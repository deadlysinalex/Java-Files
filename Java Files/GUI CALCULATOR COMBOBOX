    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        String itemSelected = jComboBox1.getSelectedItem() + "";
        
        double num1,num2,result;
        num1=Double.parseDouble(jTextField1.getText());

        num2 = Double.parseDouble(jTextField2.getText());
        
        if (itemSelected.equals("Add")){
            result=num1 + num2;
          jLabel4.setText(String.valueOf(result));
        }else if (itemSelected.equals("Subtract")){
            result=num1-num2;
            jLabel4.setText(String.valueOf(result));
            
        }else if (itemSelected.equals("Multiply")){
            result=num1*num2;
            jLabel4.setText(String.valueOf(result));
        }else if (itemSelected.equals("Divide")){
            result=num1/num2;
            jLabel4.setText(String.valueOf(result));
            }
                                    

    }                                          

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        jTextField1.setText("");
        jTextField2.setText("");
        jLabel4.setText("");
    }                                        

