    private void aSubtractActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        double num1, num2, result;
        
        num1= Double.parseDouble(aNumberone.getText());
        num2 = Double.parseDouble(aNumbertwo.getText());
        
        result = num1-num2;
        aResult.setText(String.valueOf(result));
        
    }                                         

    private void aMultiplyActionPerformed(java.awt.event.ActionEvent evt) {                                          
        double num1, num2, result;
        
        num1 = Double.parseDouble(aNumberone.getText());
        num2 = Double.parseDouble(aNumberone.getText());
        
        result = num1 * num2;
        aResult.setText(String.valueOf(result));
    }                                         

